<h1>Player 1: <%=@game.p1.name%>, Player 2: <%=@game.p2.name%></h1>
<h3>
<%=@game.p2.name%>: <%=@game.p2.hp%>HP
</h3>
<div>
  <label for="hp_current"><%=@game.p2.hp%></label>
  <progress value=<%=@game.p2.hp%> max="100"></progress>
  <label for="hp_max">100</label>
</div>
<form action="attack" method="post">
  <input type="submit" value="Attack" name='player1_attack'>
</form>

<%if @attack == "p1attack"%>
  <h2><%=@game.p1.name%> attacked <%=@game.p2.name%> </h2>
<%end%>
